{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ESP32-S3 Debug (GDB server via SSH tunnel)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/solaris-v1/build/solaris-v1.elf",
      "cwd": "${workspaceFolder}/solaris-v1",
      "MIMode": "gdb",
      "miDebuggerPath": "/opt/esp/tools/xtensa-esp-elf-gdb/16.2_20250324/xtensa-esp-elf-gdb/bin/xtensa-esp32s3-elf-gdb",
      "externalConsole": false,
      "stopAtEntry": false,
      "preLaunchTask": "ssh-tunnel-openocd-up",
      "postDebugTask": "ssh-tunnel-openocd-down",
      "launchCompleteCommand": "exec-continue",
      "setupCommands": [
        { "text": "set confirm off" },
        { "text": "set pagination off" },
        { "text": "set breakpoint pending on" },
        { "text": "set remotetimeout 5" },
        { "text": "-target-select remote 127.0.0.1:3333" },
        { "text": "monitor reset halt" },
        { "text": "thb app_main" }
      ]
    },
    {
      "name": "ESP32-S3 Flash only",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/solaris-v1/build/solaris-v1.elf",
      "cwd": "${workspaceFolder}/solaris-v1",
      "MIMode": "gdb",
      "miDebuggerPath": "/opt/esp/tools/xtensa-esp-elf-gdb/16.2_20250324/xtensa-esp-elf-gdb/bin/xtensa-esp32s3-elf-gdb",
      "externalConsole": false,
      "stopAtEntry": false,
      "preLaunchTask": "prep-remote-flash-and-tunnel",
      "postDebugTask": "ssh-tunnel-openocd-down",
      "launchCompleteCommand": "exec-continue",
      "setupCommands": [
        { "text": "set confirm off" },
        { "text": "set pagination off" },
        { "text": "set breakpoint pending on" },
        { "text": "set remotetimeout 5" },
        { "text": "-target-select remote 127.0.0.1:3333" },
        { "text": "monitor reset halt" },
        { "text": "thb app_main" }
      ]
    }
  ]
}
